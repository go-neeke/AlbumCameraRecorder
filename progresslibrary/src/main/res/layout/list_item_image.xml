<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhongjh.progresslibrary.widget.MaskProgressView
        android:id="@+id/mpvImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        android:src="@drawable/selector_image_add"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/imgPlay"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:contentDescription="@string/z_progress_library_play_button"
        android:src="@drawable/ic_play_circle_outline_black_48dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.sdsmdg.harjot.vectormaster.VectorMasterView
        android:id="@+id/vmvClose"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/z_progress_library_delete_button"
        android:visibility="gone"
        app:vector_src="@drawable/ic_twotone_highlight_off_24dp"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="@string/z_progress_library_delete_button"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_twotone_highlight_off_24dp"
        tools:visibility="visible" />

</FrameLayout>